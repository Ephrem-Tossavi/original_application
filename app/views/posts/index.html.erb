<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<h1>Posts</h1>

<div class="row py-3">
  <div class="col sm-3">
    <div class="col">
      
      <%= form_with(url: search_posts_path, method: :get, local: true) do |f| %>
      <% if defined? @search_title %>
      <%= f.text_field :search_title, value: @search_title ,class:'label mx-3',style:'height:50px;width:200px'%>
      <% else %>
        <%= f.text_field :search_title %>
        <%= f.submit 'search' ,class:'btn btn-light'%>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

<br>
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary"%>

<br>
<br>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Attachment</th>
      <th>Registered Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class= "post_row"><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= link_to "Download Post", post.attachment_url %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', post, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure to delete #{post.name}?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

