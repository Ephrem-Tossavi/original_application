<header>
    <nav class="navbar navbar-light bg-light p-3">
        <div class="container-fluid, mt:5">
            <div class="col-md-4"><h3>StudentsHelper</h3></div>
            <div class="col-md-6">

            <%= link_to I18n.t('views.messages.home'), root_path, class: "btn btn-default text-light"%>
            <% if user_signed_in? %>
            <%if current_user.admin==true %>
            <%= link_to I18n.t('views.messages.Admin Screen'), "/admin", class: "btn btn-success text-light" %>
            <% end %>
            <%= link_to I18n.t('views.messages.Posts List'), posts_path, class: "btn btn-info text-light"%>
            <%= link_to I18n.t('views.messages.Users List'), users_path , class: "btn btn-primary text-light"%>
            <%= link_to I18n.t('views.messages.Profile'), user_path(current_user.id) , class: "btn btn-primary text-light"%>
            </div>

            <div class="col-md-2">
            <%= link_to I18n.t('views.messages.Sign Out'), destroy_user_session_path, method: :delete, class: "btn btn-danger text-light"%>
            <% else %>
            <%= link_to I18n.t('views.messages.Log in'), new_user_session_path, class: "btn btn-success text-light"%>
            <%= link_to I18n.t('views.messages.Sign up'), new_user_registration_path, class: "btn btn-primary text-light" %>
            <%= link_to I18n.t('views.messages.Guest Admin'), guess_user_path(1), class: "btn btn-default text-light" %>
            <%= link_to I18n.t('views.messages.Guest User'), guess_user_path(0), class: "btn btn-default text-light" %>
            </div>
            <% end %>
        </div>
    </nav>
</header>
