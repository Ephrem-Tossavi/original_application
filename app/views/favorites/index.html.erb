<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<% @favorites.each do |post| %>


<div class="row">
  <div class="container-fluid">
  <p>
  <strong>Name:</strong>
  <%= post.post.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= post.post.content %>
</p>

<p>
  <strong>Attachment:</strong>
  <%if post.post.attachment.url%>
  <iframe src="<%= post.post.attachment.url %>", toolbar=0" width="100%" height="400px">
    </iframe>
  <%end%>
</p>

<p>
  <strong>Registered Date:</strong>
  <%= post.post.created_at %>
</p>

<p>
  <strong>Registered by:</strong>
  <%= post.post.user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= post.post.user.email %>
</p>
  </div>
</div>

<%= link_to 'Show', post, class: "btn btn-primary text-light" %>

<%if post.post.user==current_user %>

  
    <%= link_to 'Edit',
   edit_post_path(post), class: "btn btn-warning text-dark" %>
  
 
   <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you
   sure?' }, class: "btn btn-danger text-light" %>
 
 <% else %>
 <p></p>
 <% end %>
 <%end%>