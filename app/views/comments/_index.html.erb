<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= markdown(comment.content) %></p>
        <p><strong><%=I18n.t('views.messages.Commented by')%>:</strong><%= comment.user.name %></p>
        <%if comment.user==current_user %>
        <%= link_to I18n.t('views.buttons.Edit comment'), edit_post_comment_path(post, comment), remote: true %> |
        <%= link_to I18n.t('views.buttons.Delete comment'), post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Do you really want to delete this?"} %>
        <% end %>                                
      </div>
    <% end %>
  <% end %>
</ul>